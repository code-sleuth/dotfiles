// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Ros√© Pine",
  "base_keymap": "JetBrains",
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    }
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "project_panel": {
    "dock": "right"
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "dock": "bottom"
  },
  "autosave": "on_focus_change",
  "ui_font_size": 20,
  "buffer_font_size": 20,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "languages": {
    "YAML": {
      "prettier": {
        "allowed": false
      }
    }
  },
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ]
  },
  "lsp": {
    "nixd": {
      "settings": {
        "diagnostic": {
          "suppress": ["sema-extra-with"]
        },
        "path": " /run/current-system/sw/bin/nixd"
      }
    },
    "nil": {
      "settings": {
        "diagnostics": {
          "ignored": ["unused_binding"]
        },
        "path": "/run/current-system/sw/bin/nil"
      }
    },
    "gopls": {
      "binary": {
        "path": "/Users/code/go/bin/gopls",
        "arguments": [],
        "env": {
          "PATH": "/run/current-system/sw/bin:/Users/code/go/bin:/usr/local/bin:/usr/bin:/bin"
        }
      },
      "initialization_options": {
        "buildFlags": ["-tags=gopls"],
        "hoverKind": "FullDocumentation",
        "analyses": {
          "shadow": true
        }
      }
    },
    "rust-analyzer": {
      "binary": {
        "path": "/run/current-system/sw/bin/rust-analyzer",
        "env": {
          "PATH": "/run/current-system/sw/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
        }
      }
    }
  }
}
